
@{
    ViewBag.Title = "ConfirmDeleteDeck";
}

<div class="container">
    <h1>Discard Deck: </h1>

    <div class="row">
        <div class="col-md-6 col-md-offset-3">
            <div id="overview" class="panel panel-default">
                <div class="panel-heading"><h4>Are you sure you want to permanently discard your deck?!</h4></div>
                <div class="panel-body text-center">
                    <p>
                        @using (@Html.BeginForm("ConfirmDeleteDeck", "Build", FormMethod.Post, new { id = "yes" }))
                        {
                            <button type="submit" href="#" class="btn btn-lg btn-danger">Discard</button> <a href="/Build" class="btn btn-lg btn-primary">Cancel</a>
                        }

                    </p>
                </div>
            </div>
        </div>
    </div>
</div>
