@using HearthBuilder.Models.Cards
@using HearthBuilder.Models.Decks
@using HearthBuilder.Models.Notifications
@model HearthBuilder.Models.SearchParams

@{
    ViewBag.Title = "Index";


}

<div class="container">
    <h1>Browse Decks</h1>

    <div class="panel panel-default">
        <div class="panel-heading">
            <p>Pick One or More Classes</p>
        </div>
        @using (Html.BeginForm())
        {
            <div class="row" style="padding:15px;">
                <div class="col-xs-offset-2 col-xs-8">
                    <fieldset>
                        <div class="input-group">
                            @for (int i = 0; i < Model.Types.Count; i++)
                            {
                                <div class="col-xs-2">
                                    @Html.HiddenFor(m => m.Types[i].Name)
                                    @Html.LabelFor(m => m.Types[i].Checked, Model.Types[i].Name)
                                    @Html.CheckBoxFor(m => m.Types[i].Checked)
                                </div>
                            }
                        </div><br />

                        <div class="col-xs-12">
                            <div class="row">
                                <div class="col-xs-6">
                                    @Html.LabelFor(model => model.DeckName, "Deck Name (optional):")
                                    @Html.TextBoxFor(model => model.DeckName)
                                </div>
                            </div>
                        </div><br /><br />

                        <div class="col-xs-12">
                            <div class="row">
                                <div class="col-xs-6">
                                    <input type="submit" value="Search" class="btn btn-primary" />
                                </div>
                            </div>
                        </div>
                    </fieldset>
                </div>
            </div><br />
        }
    </div>

    <div class="browseDecks">
        <div class="deckList">

            @foreach (Deck deck in ViewBag.decks)
            {
                <p>@deck.Title</p>
            }

        </div>
    </div>

</div>